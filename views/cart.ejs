<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
   
    
<div class="card">
    <div class="card-header fs-5">
        <%= cart_message %> 
    </div>
    <div class="card-body">
        <h5 class="card-title">Products in your cart</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col fs-5">Product </th>
                    <th scope="col fs-5">Price</th>
                    <th scope="col fs-5">Quantity</th>
                    <th scope="col fs-5">Subtotal</th>
                </tr>
            </thead>
            <tbody>
              <% result.forEach((items)=>{ %> 
                <tr>
                    <td><%=pname%> </td>
                    <td><%=pprice %> </td>
                    <td><%=quantity %></td>
                    <td><%=sub_total%> </td>
                </tr>
                 <% }) %> 
            </tbody>

            <tfoot>
                <tr>
                    <td>Total: </td>
                    <td></td>
                    <td><%= total_quantity %></td>
                    <td> <%= total_price  %></td>
                </tr>
            </tfoot>
        </table>
        <% if(items){ %> 
        <a href="" data-bs-toggle="modal" data-bs-target="#checkOutModal" class="btn btn-dark btn-sm">Checkout</a>
        <% } %> 
    </div>
</div>

